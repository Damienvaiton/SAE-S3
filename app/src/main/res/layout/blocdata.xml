<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >



    <TextView
        android:id="@+id/heure"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:gravity="center"
        android:hint="11/22/33"
        android:textAlignment="center"
        android:textColorHint="@color/orange"
        android:textColor="@color/green"
        android:textSize="17sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@id/heure"
        android:hint="11111"
android:textColor="@color/grays"
        android:textColorHint="@color/purple_500" />

    <TextView
        android:id="@+id/humi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/temp"
        android:layout_marginStart="5dp"
        android:hint="11111"
        android:textColor="@color/green"
        android:textColorHint="@color/redoblack"

        />

    <TextView
        android:id="@+id/co2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/humi"
        android:layout_marginStart="5dp"
android:textColor="@color/grays"
        android:hint="11111"
        android:textColorHint="@color/redoblack"

        />

    <TextView
        android:id="@+id/o2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="5dp"
android:textColor="@color/green"
        android:layout_toEndOf="@id/co2"
        android:hint="11111"
        android:textColorHint="@color/redoblack"

        />

    <TextView
        android:id="@+id/lux"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="5dp"
android:textColor="@color/grays"
        android:layout_toEndOf="@id/o2"
        android:hint="11111111"
        android:textColorHint="@color/redoblack"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/heure"
        android:layout_marginTop="10dp"
        android:background="@color/redoblack"/>

</RelativeLayout>