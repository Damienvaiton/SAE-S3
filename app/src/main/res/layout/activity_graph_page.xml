<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white">

    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:backgroundTint="@color/yellowgreen">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavMenuView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            app:menu="@menu/export"
            app:labelVisibilityMode="labeled"
            app:itemTextColor="@color/grey"
            app:itemIconTint="@color/grey"/>



    </com.google.android.material.bottomappbar.BottomAppBar>




    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="675dp">


        <TextView
            android:id="@+id/viewTemp"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="69dp"
            android:layout_marginBottom="36dp"
            android:textSize="17sp"
            android:gravity="center_horizontal"
            app:layout_constraintBottom_toTopOf="@+id/boxTemp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/viewLux"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginStart="7dp"
            android:layout_marginTop="69dp"
            android:layout_marginBottom="36dp"
            android:gravity="center_horizontal"
            android:textSize="17sp"
            app:layout_constraintBottom_toTopOf="@+id/boxLux"
            app:layout_constraintStart_toEndOf="@+id/viewTemp"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/viewCO2"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="69dp"
            android:gravity="center_horizontal"
            android:textSize="17sp"
            app:layout_constraintStart_toEndOf="@+id/viewHumi"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/viewO2"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginStart="7dp"
            android:layout_marginTop="69dp"
            android:gravity="center_horizontal"
            android:textSize="17sp"
            app:layout_constraintStart_toEndOf="@+id/viewCO2"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/viewHumi"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginStart="7dp"
            android:layout_marginTop="69dp"
            android:gravity="center_horizontal"
            android:textSize="17sp"
            app:layout_constraintStart_toEndOf="@+id/viewLux"
            app:layout_constraintTop_toTopOf="parent" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"

            android:layout_marginTop="7dp"
            android:layout_marginBottom="27dp"
            android:background="@color/yellowgreen"
            app:layout_constraintBottom_toTopOf="@+id/boxTemp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewTemp" />

        <CheckBox
            android:id="@+id/boxTemp"
            android:layout_width="54dp"
            android:layout_height="21dp"
            android:layout_marginStart="39dp"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="464dp"
            android:text="T°"
            android:textSize="17sp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/boxLux"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <CheckBox
            android:id="@+id/boxLux"
            android:layout_width="54dp"
            android:layout_height="21dp"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="464dp"
            android:text="Lux"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/boxHumi"
            app:layout_constraintStart_toEndOf="@+id/boxTemp"
            app:layout_constraintTop_toTopOf="parent" />

        <CheckBox
            android:id="@+id/boxO2"
            android:layout_width="54dp"
            android:layout_height="21dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="101dp"
            android:text="O2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/boxCO2"
            app:layout_constraintTop_toBottomOf="@+id/viewCO2" />

        <CheckBox
            android:id="@+id/boxCO2"
            android:layout_width="54dp"
            android:layout_height="21dp"
            android:layout_marginTop="36dp"
            android:layout_marginBottom="509dp"
            android:text="CO2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/boxHumi"
            app:layout_constraintTop_toBottomOf="@+id/viewCO2" />


        <CheckBox
            android:id="@+id/boxHumi"
            android:layout_width="54dp"
            android:layout_height="21dp"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="210dp"
            android:layout_marginBottom="464dp"
            android:text="Humidité"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/boxLux"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/viewTime"
            android:layout_width="124dp"
            android:layout_height="39dp"
            android:layout_marginStart="287dp"
            android:layout_marginTop="1dp"
            android:gravity="center"
            android:inputType="numberDecimal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView5" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="124dp"
            android:layout_height="16dp"
            android:layout_marginStart="309dp"
            android:layout_marginTop="512dp"
            android:layout_marginEnd="2dp"
            android:gravity="right|end"
            android:text="rafraîchissement "
            app:layout_constraintBottom_toTopOf="@+id/viewTime"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.916"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/viewO2" />

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/lineChart"
            android:layout_width="331dp"
            android:layout_height="400dp"
            android:layout_gravity="center"
            android:layout_marginStart="39dp"
            android:layout_marginTop="42dp"
            android:layout_marginEnd="39dp"
            app:layout_constraintBottom_toTopOf="@+id/textView5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/boxTemp"
            tools:ignore="MissingClass">


        </com.github.mikephil.charting.charts.LineChart>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:layout_marginTop="37dp"
            android:layout_marginEnd="29dp"
            android:layout_marginBottom="12dp"
            android:text="Température"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/viewTemp"
            app:layout_constraintEnd_toStartOf="@+id/textView13"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="61dp"
            android:layout_marginTop="38dp"
            android:layout_marginEnd="41dp"
            android:layout_marginBottom="12dp"
            android:text="O2"
            app:layout_constraintBottom_toTopOf="@+id/viewO2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView11"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="38dp"
            android:layout_marginBottom="12dp"
            android:text="CO2"
            app:layout_constraintBottom_toTopOf="@+id/viewCO2"
            app:layout_constraintStart_toEndOf="@+id/textView12"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="46dp"
            android:layout_marginTop="38dp"
            android:layout_marginEnd="35dp"
            android:layout_marginBottom="12dp"
            android:text="Humidité"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/viewHumi"
            app:layout_constraintEnd_toStartOf="@+id/textView11"
            app:layout_constraintStart_toEndOf="@+id/textView13"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="29dp"
            android:layout_marginTop="38dp"
            android:layout_marginBottom="12dp"
            android:text="Lux"
            android:textSize="12sp"
            app:layout_constraintBottom_toTopOf="@+id/viewLux"
            app:layout_constraintStart_toEndOf="@+id/textView6"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>