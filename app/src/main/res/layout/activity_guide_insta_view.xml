<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="true"
    android:fillViewport="true"
    tools:context=".View.GuideInstaView">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtTableMatiere"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="21dp"
            android:layout_marginEnd="22dp"
            android:gravity="center"
            android:text="Table des matières"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/contenerButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtTableMatiere">

            <Button

                android:id="@+id/btn_scroll_esp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/Vegetabilis_purple"
                android:text="Branchement ESP"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button


                android:id="@+id/btn_scroll_home"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/Vegetabilis_purple"
                android:text="Page d'accueil"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_scroll_esp" />

            <Button

                android:id="@+id/btn_scroll_graph"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/Vegetabilis_purple"
                android:text="Page graphique"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_scroll_home" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/textViewGuideInsta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="50dp"
            android:gravity="center"
            android:text="Guide d'installation de l'ESP"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/contenerButton" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_branchement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="2dp"
            app:layout_constraintBottom_toTopOf="@+id/tr"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewGuideInsta">

            <TextView
                android:id="@+id/cap1"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:justificationMode="inter_word"
                android:text="Tout d'abord, brancher le capteur de température et d'humidité sur la borne A0 de l'appareil"
                app:layout_constraintBottom_toTopOf="@+id/cap2"
                app:layout_constraintEnd_toStartOf="@+id/imageView3"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/borne_a0"
                app:layout_constraintBottom_toBottomOf="@+id/cap1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/cap1"
                app:layout_constraintTop_toTopOf="@+id/cap1"></ImageView>

            <TextView
                android:id="@+id/cap2"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:justificationMode="inter_word"
                android:text="Rajoutez ensuite le capteur de lumière sur la borne A4 de l'appareil"
                app:layout_constraintBottom_toTopOf="@+id/cap3"
                app:layout_constraintEnd_toStartOf="@+id/imageView5"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cap1" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/bornea4"
                app:layout_constraintBottom_toBottomOf="@+id/cap2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/cap2"
                app:layout_constraintTop_toTopOf="@+id/cap2"></ImageView>

            <TextView
                android:id="@+id/cap3"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:justificationMode="inter_word"
                android:text="Poursuivez le branchement par le capteur d'oxygène en borne A2"
                app:layout_constraintBottom_toTopOf="@+id/cap4"
                app:layout_constraintEnd_toStartOf="@+id/imageView6"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cap2" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="60dp"

                android:layout_height="60dp"
                android:src="@drawable/bornea2"
                app:layout_constraintBottom_toBottomOf="@+id/cap3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/cap3"
                app:layout_constraintTop_toTopOf="@+id/cap3"></ImageView>

            <TextView
                android:id="@+id/cap4"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:justificationMode="inter_word"
                android:text="Enfin, brancher le capteur de CO2 sur la boorne SCL à l'aide du câble noir fourni dans la boîte"
                app:layout_constraintBottom_toTopOf="@+id/cap5"
                app:layout_constraintEnd_toStartOf="@+id/imageView7"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cap3" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="60dp"
                android:layout_height="60dp"

                android:src="@drawable/borne_scl"
                app:layout_constraintBottom_toBottomOf="@+id/cap4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/cap4"
                app:layout_constraintTop_toTopOf="@+id/cap4"></ImageView>

            <TextView
                android:id="@+id/cap5"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:justificationMode="inter_word"
                android:text="@string/addUbsCable"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/imageView8"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cap4" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="60dp"
                android:layout_height="60dp"

                android:src="@drawable/logo_app"
                app:layout_constraintBottom_toBottomOf="@+id/cap5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/cap5"
                app:layout_constraintTop_toTopOf="@+id/cap5"></ImageView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/texteViewPhotoESP"
            android:layout_width="0dp"
            android:layout_height="49dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="5dp"
            android:justificationMode="inter_word"
            android:text="@string/branchementCapteurFinish"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/imageView4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_branchement" />

        <ImageView
            android:id="@+id/imgESP"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="50dp"
            app:layout_constraintBottom_toTopOf="@+id/séparateurImgESP"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/texteViewPhotoESP"
            app:srcCompat="@drawable/cable_noir_3z" />

        <LinearLayout
            android:id="@+id/séparateurImgESP"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginBottom="10dp"
            android:background="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/layout_accueil"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgESP" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_accueil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/séparateurAccueil"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/séparateurImgESP">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:src="@drawable/accueil"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/textView2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/textView1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:gravity="center"
                android:justificationMode="inter_word"
                android:text="Au lancement de l'application, vous arrivez sur cette page"
                app:layout_constraintBottom_toTopOf="@+id/textView2"
                app:layout_constraintEnd_toEndOf="@+id/textView2"
                app:layout_constraintStart_toStartOf="@+id/textView2"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:justificationMode="inter_word"
                android:text="En 1 : \nVous avez une liste déroulante composée de tous les ESP actuellement disponible, il vous suffit d'en choir un pour d'appuyer sur le bouton 2 pour accéder à la page de graphisme"
                app:layout_constraintBottom_toTopOf="@+id/textView3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView1" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"

                android:gravity="center"
                android:justificationMode="inter_word"
                android:text="En 2 : \nUn raccourci vers le mode administratif de l'application, cette partie ne sera pas aborder icin si vous voulez en savoir plus merci de vous référé au 'Guide d'utilisation'"
                android:textAlignment="textStart"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/textView2"
                app:layout_constraintStart_toStartOf="@+id/textView2"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/séparateurAccueil"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/linearLayoutCompat"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_accueil" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/linearLayoutCompat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/séparateurAccueil">


            <ImageView
                android:id="@+id/imageVi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/graph"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/textView1graph"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/textView1graph"
                android:layout_width="240dp"
                android:layout_height="0dp"
                android:layout_marginEnd="10dp"
                android:justificationMode="inter_word"
                android:text="En 1 : \nUn panel où vous retrouverez les dernières valeurs connues"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView2graph"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:justificationMode="inter_word"
                android:text="En 2 : \nUne rangée de case cochable pour sélectionner les mesures que vous voulez voir apparaître sur le graphique, il est recommander de n'en utiliser que 2 à la fois même si plus est possible."
                app:layout_constraintEnd_toEndOf="@+id/textView1graph"
                app:layout_constraintStart_toStartOf="@+id/textView1graph"
                app:layout_constraintTop_toBottomOf="@+id/textView1graph" />

            <TextView
                android:id="@+id/textView3graph"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:justificationMode="inter_word"
                android:text="En 3 : \nVoici le graphique, vous pouvez zoomer, dézooomer grâce à un pincement du doigts dessus, aussi, en cliquant sur un point de mesure il est possible de voir direment l'heure exacte ainsi que la valeurs enregistrée à ce moment là"
                app:layout_constraintEnd_toEndOf="@+id/textView1graph"
                app:layout_constraintStart_toStartOf="@+id/textView2graph"
                app:layout_constraintTop_toBottomOf="@+id/textView2graph" />

            <TextView
                android:id="@+id/textView4graph"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:justificationMode="inter_word"
                android:text="En 4 :\nL'accès vers une page contenant une liste de toutes les données"
                app:layout_constraintEnd_toEndOf="@+id/textView3graph"
                app:layout_constraintStart_toStartOf="@+id/textView3graph"
                app:layout_constraintTop_toBottomOf="@+id/textView3graph" />

            <TextView
                android:id="@+id/textView5graph"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:justificationMode="inter_word"
                android:text="En 5 :\nPermet d'exporter toutes les données au moment T d'un ESP au format excel dans le dossier 'Download' du téléphone"
                app:layout_constraintEnd_toEndOf="@+id/textView1graph"
                app:layout_constraintStart_toStartOf="@+id/textView4graph"
                app:layout_constraintTop_toBottomOf="@+id/textView4graph" />

            <TextView
                android:id="@+id/textView6graph"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:justificationMode="inter_word"
                android:text="En 6 : \nAccès vers la page paramètre du graphique"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/textView1graph"
                app:layout_constraintStart_toStartOf="@+id/textView5graph"
                app:layout_constraintTop_toBottomOf="@+id/textView5graph" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
