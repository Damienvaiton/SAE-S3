<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5sp"
    android:layout_marginTop="2sp"
    android:layout_marginRight="5sp"
    android:layout_marginBottom="5sp"
    app:cardCornerRadius="5dp"
    app:cardBackgroundColor="#ABFBAF">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >



    <TextView
        android:id="@+id/heure"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:gravity="center"
        android:hint="11/22/33"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@id/heure"
        android:gravity="center"
        android:hint="11111"
        android:textColor="@color/black"
        android:textColorHint="@color/purple_500" />

    <TextView
        android:id="@+id/humi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@id/temp"
        android:gravity="center"
        android:hint="11111"
        android:textColor="@color/black"

        android:textColorHint="@color/black" />

    <TextView
        android:id="@+id/co2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@id/humi"
        android:gravity="center"
        android:hint="11111"
        android:textColor="@color/black"

        android:textColorHint="@color/black" />

    <TextView
        android:id="@+id/o2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@id/co2"
        android:gravity="center"
        android:hint="11111"
        android:textColor="@color/black"

        android:textColorHint="@color/black" />

    <TextView
        android:id="@+id/lux"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@id/o2"
        android:gravity="center"
        android:hint="11111111"
        android:textColor="@color/black"

        android:textColorHint="@color/black" />


</RelativeLayout>
</androidx.cardview.widget.CardView>